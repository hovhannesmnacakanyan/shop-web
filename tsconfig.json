{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "ui-kit": ["./ui-kit"],
      "helpers": ["./helpers"],
      "pages": ["./pages"],
      "hooks": ["./hooks"],
      "store": ["./store"],
      "services": ["./services"],
      "@types": ["./@types"],
      "@constants": ["./@constants"]
    }
  },
  "include": [
    "src",
    "public",
    "declarations.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.ts",
    "declarations.d.ts",
    "config.js"
  ],
  "exclude": ["node_modules"]
}
